format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.salmon}
format-foreground = ${color.white}

exec = $HOME/.config/i3/scripts/memory

;==========================================================

[module/cpu]
type = internal/cpu

interval = 2
format-prefix = " "
format-padding = 0
format-prefix-foreground = ${colors.aqua}
format-foreground = ${colors.white}

;==========================================================

[module/cpu_temp]
type = internal/temperature

interval = 0.5

thermal-zone = 0

hwmon-path = /sys/devices/pci0000:00/0000:00:01.1/0000:01:00.0/nvme/nvme0/hwmon0/temp1_input
base-temperature = 20
warn-temperature = 60

units = true

format = <ramp> <label>

format-warn = <ramp> <label-warn>

label = %temperature-c%

label-warn = %temperature-c%
label-warn-foreground = ${colors.urgentred}

ramp-0 = ""
ramp-1 = ""
ramp-2 = ""
ramp-foreground = #D3DB6B

;==========================================================

[module/network]
type = internal/network
interface = enp37s0

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = <ramp-signal><label-connected>
ramp-signal-0 = " "
ramp-signal-foreground = ${colors.fuchsia}
ramp-signal-font = 2

format-disconnected = <label-disconnected>
format-disconnected-prefix = ""
format-disconnected-prefix-font = 2
format-disconnected-foreground = ${colors.white}

label-connected = %netspeed%
label-disconnected = Offline 

label-connected-foreground = ${colors.white}
label-disconnected-foreground = ${colors.background}

;==========================================================

[module/volume]
type = internal/pulseaudio

use-ui-max = false

interval = 1

format-volume = <ramp-volume><label-volume>

format-muted = <label-muted>
format-muted-prefix = " "
format-muted-prefix-font = 2
format-muted-prefix-foreground = ${color.background}

label-volume = "%percentage%% "
label-muted = "Mute"

label-volume-foreground = ${color.background}
label-muted-foreground = ${color.background}

ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
ramp-volume-3 = " "
ramp-volume-4 = " "
ramp-volume-5 = " "
ramp-volume-6 = " "
ramp-volume-7 = " "
ramp-volume-8 = " "
