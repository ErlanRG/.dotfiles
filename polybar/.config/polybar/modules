content-padding = 0
click-left= $HOME/.config/rofi/launchers/type-3/launcher.sh

;==========================================================

[module/filesystem]
type = internal/fs

mount-0 = /
interval = 30
fixed-values = true

format-mounted = <label-mounted>
format-mounted-prefix = ""
format-mounted-prefix-foreground = ${colors.green}

format-unmounted = <label-unmounted>
format-unmounted-prefix = " "
format-unmounted-prefix-foreground = ${color.white}

label-mounted = "%{A1:kitty -e ncdu / --exclude /mnt &:} %free%%{A}"
label-unmounted = " %mountpoint%: NA"
label-mounted-foreground = ${color.background}

;==========================================================

[module/memory]
type = internal/memory

